@model ITIAttendanceSystem.Models.Program
@{
    Layout = "_ManageLayout";
    ViewData["Title"] = Model is null ? "New Program" : $"Updating {Model.ProgramName}";
}

<form method="post" class="bg-info text-dark  p-5" asp-action="@(Model is null?"AddProgram":"UpdateProgram")" asp-controller="Manage">
    <h2 class="text-center">@(Model is null ? "Create New Program" : $"Updating {Model.ProgramName}")</h2>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row mb-3 mx-0 justify-content-center">
        @if (Model != null)
        {
            <input hidden asp-for="ProgramId" />
        }
        <div class="col-12">
            <label asp-for="ProgramName" class="fw-bold d-block form-label mt-3">Name</label>
            <input asp-for="ProgramName" class="form-control" />
            <span asp-validation-for="ProgramName"></span>
        </div>

        <div class="col-12">
            <label asp-for="ProgramDuration" class="fw-bold d-block form-label mt-3">Duration in Months</label>
            <input asp-for="ProgramDuration" class="form-control" />
            <span asp-validation-for="ProgramDuration"></span>
        </div>

        <label asp-for="IsActive" class="col-12 fw-bold d-inline-block form-label mt-3">Active:</label>
        <div class="d-inline-block">
            <div class="form-check form-check-inline">
                <input class="form-check-input" id="yesactive" asp-for="IsActive" type="radio" value="true">
                <label class="form-check-label" for="yesactive" asp-for="IsActive">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" id="notactive" asp-for="IsActive" type="radio" value="false">
                <label class="form-check-label" for="notactive" asp-for="IsActive">No</label>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">

            @if (Model != null)
            {
                <input type="hidden" name="ActionName" value="Update" />
            }
            <input type="submit" value="@(Model is null?"Add":"Update")" class="btn btn-success d-inline-block  px-5" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
