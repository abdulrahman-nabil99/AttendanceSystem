@model IEnumerable<ITIAttendanceSystem.Models.Program>
@{
    Layout = "_ManageLayout";
    ViewData["Title"] = "Programs";
}
<div class="d-flex py-2 justify-content-end mb-2">
    <a asp-action="AddProgram" asp-controller="Manage" class="btn btn-primary d-inline-block px-3">Add Program</a>
</div>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Program Id</th>
            <th>Program Name</th>
            <th>Program Duration (Month)</th>
            <th>Status</th>
            <th>Intakes</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() <= 0)
        {
            <tr>
                <td class="h2" colspan="6">No Programs To display</td>
            </tr>
        }
        else
        {
            foreach (var program in Model)
            {
                <tr>
                    <td>@program.ProgramId</td>
                    <td>@program.ProgramName</td>
                    <td>@program.ProgramDuration</td>
                    <td>@(program.IsActive != null && program.IsActive.Value == true ? "Active" : "Not Active")</td>
                    <td>Intakes</td>
                    <td>
                        <a asp-action="UpdateProgram" asp-controller="Manage" asp-route-id="@program.ProgramId" class="btn btn-warning d-inline-block px-3">Update</a>
                        <a asp-action="DeleteProgram" asp-controller="Manage" asp-route-id="@program.ProgramId" class="btn btn-danger d-inline-block px-3">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
