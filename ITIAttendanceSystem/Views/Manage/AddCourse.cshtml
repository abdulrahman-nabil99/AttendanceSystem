@model Course
@{
    Layout = "_ManageLayout";
    ViewData["Title"] = Model is null ? "New Course" : $"Updating {Model.CourseName}";
}

<form method="post" class="bg-info text-dark  p-5" asp-action="@(Model is null?"AddCourse":"UpdateCourse")" asp-controller="Manage">
    <h2 class="text-center">@(Model is null ? "Create New Course" : $"Updating {Model.CourseName}")</h2>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row mb-3 mx-0 justify-content-center">

        <div class="col-12">
            <label asp-for="CourseId" class="fw-bold d-block form-label mt-3">Id</label>
            @if (Model == null)
            {
                <input asp-for="CourseId" class="form-control" />
            }
            else
            {
                <input asp-for="CourseId" readonly class="form-control" />
            }
            <span asp-validation-for="CourseId"></span>
        </div>
        <div class="col-12">
            <label asp-for="CourseName" class="fw-bold d-block form-label mt-3">Name</label>
            <input asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName"></span>
        </div>

        <div class="col-12">
            <label asp-for="CourseDuration" class="fw-bold d-block form-label mt-3">Duration in Hours</label>
            <input asp-for="CourseDuration" class="form-control" />
            <span asp-validation-for="CourseDuration"></span>
        </div>
    </div>
    <div class="d-flex justify-content-end">
            @if (Model != null)
            {
                <input type="hidden" name="ActionName" value="Update" />
            }
            <input type="submit" value="@(Model is null?"Add":"Update")" class="btn btn-success d-inline-block  px-5" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
